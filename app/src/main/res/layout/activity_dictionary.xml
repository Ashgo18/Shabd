<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dictionary_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dictionary.DictionaryActivity">

    <RelativeLayout
        android:id="@+id/bardict"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/speakbar"
        android:orientation="horizontal"
        android:padding="2dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/deld"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/welcome"
            android:inputType="text"
            android:padding="10dip"
            android:textColor="#0d5bdd"
            android:textSize="19sp">

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/deld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/save"
            android:padding="10dip"
            app:srcCompat="@drawable/ic_cancel_black_24dp" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dip"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_library_add_black_24dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_dictionary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bardict"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_margin="16dp"
        android:src="@drawable/ic_search_black_24dp"
        app:elevation="4dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playd"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playd"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_arrow_black_24dp"
        app:elevation="4dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>